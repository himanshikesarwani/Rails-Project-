<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email  %></td>
        <% if logged_in? and current_user.admin? %>
        <td>
        	<%= link_to "Delete this user", user_path(user), method: :delete , 
        	data:{ confirm: "Are you sure you want to delete user and all the articles" } %>      	
        </td>
        <% end %>
		<td>
      </tr>
    <% end %>
  </tbody>
</table>

